<resources>

    <attr name="bluetoothIcon" format="reference"/>
    <attr name="shareIcon" format="reference"/>
    <attr name="navigationIcon" format="reference"/>
    <attr name="cameraIcon" format="reference"/>
    <attr name="directionsIcon" format="reference"/>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!-- Dark application theme -->
    <style name="TemaOscuro" parent="AppTheme">
        <item name="android:background">@color/darkTheme</item>
        <item name="android:colorBackground">@color/darkTheme</item>
        <item name="android:textColor">@color/textColorDark</item>

        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <!--item name="android:spinnerStyle">@style/SpinnerTheme</item-->
        <item name="bluetoothIcon">@drawable/ic_bluetooth_white_24dp</item>
        <item name="shareIcon">@drawable/ic_share_white_24dp</item>
        <item name="navigationIcon">@drawable/ic_navigation_white_24dp</item>
        <item name="cameraIcon">@drawable/ic_camera_white_24dp</item>
        <item name="directionsIcon">@drawable/ic_directions_white_24dp</item>
    </style>

    <!-- Light application theme. -->
    <style name="TemaClaro" parent="AppTheme">
        <item name="android:background">@color/lightTheme</item>
        <item name="android:colorBackground">@color/lightTheme</item>
        <item name="android:textColor">@color/textColorLight</item>
        <item name="bluetoothIcon">@drawable/ic_bluetooth_black_24dp</item>
        <item name="shareIcon">@drawable/ic_share_black_24dp</item>
        <item name="navigationIcon">@drawable/ic_navigation_black_24dp</item>
        <item name="cameraIcon">@drawable/ic_camera_black_24dp</item>
        <item name="directionsIcon">@drawable/ic_directions_black_24dp</item>
    </style>

    <!-- Extras -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SpinnerTheme" parent="@style/Widget.AppCompat.Spinner">
        <item name="android:popupBackground">@color/darkTheme</item>
        <item name="android:color">@color/lightTheme</item>
    </style>

    <style name="ButtonStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:buttonStyle">@color/darkTheme</item>
        <item name="android:shadowColor">@color/darkTheme</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
