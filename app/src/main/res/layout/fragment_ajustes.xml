<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titulo_ajustes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="Ajustes"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cabecera_tema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="Tema visual"
            android:textSize="18dp" />

        <Spinner
            android:id="@+id/spinner_tema"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawSelectorOnTop="true"
            android:entries="@array/temas_array"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/cabecera_unidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="Unidad de distancia"
            android:textSize="18dp" />

        <Spinner
            android:id="@+id/spinner_unidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawSelectorOnTop="true"
            android:entries="@array/unidad_array"
            android:textSize="18dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:padding="8pt"
                android:paddingLeft="8pt"
                android:paddingRight="8pt">

                <Button
                    android:id="@+id/btnAddTrayecto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8pt"
                    android:height="24pt"
                    android:background="@android:color/darker_gray"
                    android:text="crear trayecto de prueba"
                    android:onClick="onAddTrayectoClick" />

                <Button
                    android:id="@+id/btnExportar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8pt"
                    android:height="24pt"
                    android:background="@android:color/darker_gray"
                    android:text="Exportar copia de seguridad" />

                <Button
                    android:id="@+id/btnImportar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8pt"
                    android:height="24pt"
                    android:background="@android:color/darker_gray"
                    android:text="Importar copia de seguridad" />

                <Button
                    android:id="@+id/btnEliminar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="24pt"
                    android:background="@android:color/holo_red_light"
                    android:text="Eliminar registros" />
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

</ScrollView>